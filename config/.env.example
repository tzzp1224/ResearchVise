# ============================================
# Academic Research Agent - Environment Config
# ============================================

# ArXiv Configuration (公开API，无需Token)
ARXIV_MAX_RESULTS=50
ARXIV_SORT_BY=submittedDate  # relevance, lastUpdatedDate, submittedDate

# Hugging Face Configuration
HUGGINGFACE_TOKEN=your_huggingface_token_here
HUGGINGFACE_MAX_RESULTS=30

# Twitter/X Configuration
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_MAX_RESULTS=100

# Reddit Configuration
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=AcademicResearchAgent/1.0 by YourUsername
REDDIT_MAX_RESULTS=50

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_MAX_RESULTS=30

# General Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# ============================================
# Phase 2: Embedding & Storage Configuration
# ============================================

# Embedding Configuration
EMBEDDING_PROVIDER=siliconflow  # siliconflow, jina, openai, sentence_transformers
# EMBEDDING_MODEL_NAME=BAAI/bge-m3  # 不填则使用默认

# SiliconFlow API (免费，推荐)
# 注册获取免费 API Key: https://siliconflow.cn/
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# Jina AI API (有免费额度)
# 注册获取免费 API Key: https://jina.ai/embeddings/
# JINA_API_KEY=your_jina_api_key_here

# OpenAI API (付费)
# OPENAI_API_KEY=your_openai_api_key_here

# Storage Configuration (向量数据库)
STORAGE_VECTOR_DB_PROVIDER=qdrant
STORAGE_VECTOR_DB_PATH=./data/qdrant_db
STORAGE_CACHE_PATH=./data/cache
STORAGE_CACHE_TTL=3600

# Qdrant Cloud (可选，用于远程部署)
# STORAGE_QDRANT_URL=https://xxx.qdrant.io
# STORAGE_QDRANT_API_KEY=your_qdrant_api_key

# ============================================
# Phase 3: LLM Configuration
# ============================================

# LLM Provider Selection
LLM_PROVIDER=deepseek  # openai, anthropic, deepseek, gemini
# LLM_MODEL_NAME=deepseek-chat  # 不填则使用默认
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# ============================================
# Research Artifact Cache (相似查询复用)
# ============================================
RESEARCH_CACHE_ENABLED=true
RESEARCH_CACHE_SIMILARITY_THRESHOLD=0.82
RESEARCH_CACHE_TOP_K=3
RESEARCH_CACHE_MIN_QUALITY_SCORE=0.0
RESEARCH_CACHE_REQUIRE_VIDEO_FOR_VIDEO_REQUEST=true
RESEARCH_CACHE_COLLECTION_NAME=research_artifacts

# OpenAI API
# LLM_OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (Claude)
# LLM_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# DeepSeek API (推荐，性价比高)
# 注册获取 API Key: https://platform.deepseek.com/
LLM_DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Google Gemini API
# 注册获取 API Key: https://aistudio.google.com/
# LLM_GEMINI_API_KEY=your_gemini_api_key_here
